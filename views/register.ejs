<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register - Cervello</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/register.css">
</head>

<body>
  <%- include('partials/navbar') %>
    <div class="container mt-5">
      <div class="card">
        <div class="card-header text-center">
          <h3>Register</h3>
        </div>
        <div class="card-body">
          <% if (typeof message !=='undefined' ) { %>
            <div class="alert alert-danger mt-4 text-center">
              <%= message %>
            </div>
            <% } %>
              <form action="/auth/register" method="POST">
                <div class="mb-3 input-group-outer">
                  <label for="name" class="form-label">Name</label>
                  <div class="input-flex">
                    <i class="fas fa-user icon-left"></i>
                    <input type="text" class="form-control" id="name" name="name" required>
                  </div>
                </div>
                <div class="mb-3 input-group-outer">
                  <label for="email" class="form-label">Email Address</label>
                  <div class="input-flex">
                    <i class="fas fa-envelope icon-left"></i>
                    <input type="email" class="form-control" id="email" name="email" required>
                  </div>
                </div>
                <div class="mb-3 input-group-outer">
                  <label for="password" class="form-label">Password</label>
                  <div class="input-flex">
                    <i class="fas fa-lock icon-left"></i>
                    <input type="password" class="form-control" id="password" name="password" required
  pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[^A-Za-z\d]).{6,}$"
  title="Password must be at least 6 characters, include letters, digits, and one special character">
                  </div>
                  <small class="text-muted">
                    Must be at least 6 characters, include letters, digits, and one special character
                  </small>
                </div>
                <div class="mb-3 input-group-outer">
                  <label for="passwordconfirm" class="form-label">Confirm Password</label>
                  <div class="input-flex">
                    <i class="fas fa-lock icon-left"></i>
                    <input type="password" class="form-control" id="passwordconfirm" name="passwordconfirm" required>
                  </div>
                </div>
                <div class="form-check mb-3">
                  <input class="form-check-input" type="checkbox" id="terms" required>
                  <label class="form-check-label" for="terms">
                    I accept all terms & conditions
                  </label>
                </div>
                <button type="submit" class="btn btn-primary">Register Now</button>
              </form>
        </div>
      </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>