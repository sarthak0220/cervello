    <script>
        // Menu button
        const menuBtn = document.querySelector('.menu-btn');
        const navigation = document.querySelector('.navigation');

        menuBtn.addEventListener('click', () => {
            navigation.classList.toggle('active');
            menuBtn.classList.toggle('active');  // Ensure the button toggles its active state
        });

        let index = 0;
        const slides = document.querySelector(".slides");
        const totalSlides = document.querySelectorAll(".slide").length;
        const contents = document.querySelectorAll(".content");

        function updateSlide() {
            slides.style.transform = `translateX(-${index * 100}%)`;
            resetTextAnimation();
            setTimeout(() => {
                animateText(contents[index]);
            }, 500); // Wait 0.5s before triggering animation
        }

        function resetTextAnimation() {
            contents.forEach(content => {
                content.style.opacity = "0";
                content.querySelector("h1").style.animation = "none";
                content.querySelector("p").style.animation = "none";
                content.querySelector(".buttons").style.animation = "none";
            });
        }

        function animateText(content) {
            content.style.opacity = "1";
            content.querySelector("h1").style.animation = "fadeInUp 1s ease-in-out forwards";
            content.querySelector("p").style.animation = "fadeInUp 1s ease-in-out 1s forwards";
            content.querySelector(".buttons").style.animation = "fadeInUp 1s ease-in-out 1.5s forwards";
        }

        document.querySelector(".next").addEventListener("click", () => {
            index = (index + 1) % totalSlides;
            updateSlide();
        });

        document.querySelector(".prev").addEventListener("click", () => {
            index = (index - 1 + totalSlides) % totalSlides;
            updateSlide();
        });

        setInterval(() => {
            index = (index + 1) % totalSlides;
            updateSlide();
        }, 8000); // Slower auto-slide

        // Initial animation when page loads
        window.onload = () => {
            animateText(contents[0]);
        };
        
    </script>

