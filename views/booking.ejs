<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hotel Search Tab</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/booking.css">
</head>

<body>
  
  <%- include('partials/navbar') %>

  <!-- Hero Section with Search -->
  <div class="hero">
    <h2>Find the best hotels in your area</h2>
    <div class="search-wrapper">
      <div class="search-tab">
        <!-- Destination -->
        <div class="input-group">
          <label for="destination">Destination</label>
          <select id="destination">
            <option value="">Select Destination</option>
            <option value="India">India</option>
            <option value="Finland">Finland</option>
            <option value="Los Angeles">Maldives</option>
            <option value="Chicago">Sweden</option>
            <option value="Miami">United Kingdom</option>
          </select>
          <div id="destination-error" class="error"></div>
        </div>

        <!-- Check-in -->
        <div class="input-group">
          <label for="checkin">Check-in</label>
          <input type="date" id="checkin" />
          <div id="checkin-error" class="error"></div>
        </div>

        <!-- Check-out -->
        <div class="input-group">
          <label for="checkout">Check-out</label>
          <input type="date" id="checkout" />
          <div id="checkout-error" class="error"></div>
        </div>

        <!-- Guests -->
        <div class="input-group" id="guests-group">
          <label for="guests">Guests</label>
          <div class="custom-select" id="guests-display" onclick="toggleDropdown(event)">Select Guests</div>
          <div class="dropdown-content-guests" id="people-dropdown">
            <label for="adults">Adults:
              <input type="number" id="adults" value="1" min="1" onchange="updateGuestDisplay()" />
            </label>
            <label for="children">Children:
              <input type="number" id="children" value="0" min="0" onchange="updateGuestDisplay()" />
            </label>
          </div>
          <div id="guests-error" class="error"></div>
        </div>

        <!-- Check Now Button -->
        <div class="input-group">
          <button onclick="checkNow()">Check Now</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Hotel Listings Section -->
  <div id="hotel-results"></div>
  <footer>
    <%- include('partials/footer') %>
</footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
        <script src="/script/booking.js"></script>

</body>

</html>